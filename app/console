#!/usr/bin/env php
<?php

require_once __DIR__ . '/bootstrap.php';

use Symfony\Component\Console\Application;
use Martiis\CheckoutServer\Payment\Command\Queue2PaymentCommand;
use Martiis\CheckoutServer\Queue\Command\Payment2QueueCommand;
use Martiis\CheckoutServer\Storage\Command\Queue2StorageCommand;

$app = new Application('Checkout Server Application', '0.1');

$app->add(new Queue2PaymentCommand());
$app->add(new Payment2QueueCommand());
$app->add(new Queue2StorageCommand());

$app->run();
